{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "loader.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/posts",
      "dest": "/loader.js"
    },
    {
      "src": "/posts.json",
      "dest": "/public/posts.json"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "buildCommand": "npm install && node loader.js"
} 